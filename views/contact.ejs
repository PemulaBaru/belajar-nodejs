<div class="container-fluid">
 
  <h2 class="mt-3 mb-2">Halaman Kontak</h2>
<div class="col-8 d-inline-flex align-items-center justify-content-start">
    <a href="/contact/add-contact" class="btn btn-primary my-2 btn-contact d-flex order-3 mx-2 align-items-center ">Tambah Kontak</a>
    <div class="mx-2 order-1">
      <label for="inputKontak">Cari: </label>
           <input type="search"  id="inputKontak" placeholder="contact...">
    </div>
         <button type="button" id="searchKontak" class="btn btn-primary btn-contact d-flex mx-2 order-2 align-items-center"><i class="bi bi-search"></i></button>
        
  </div>

  <table class="table">
    <thead>
     <tr>
       <th scope="col">No.</th>
       <th scope="col">Nama</th>
       <th scope="col">NO.HP</th>
       <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
    <% if (contacts.length < 1) { %>
      <tr>
        <td colspan="4">
          <div class="alert mt-4 fw-bold alert-danger" role="alert">
           Contact belum tersedia, <a href="/contact/add-contact">tambah kontak di sini.</a>
          </div>
        
        </td>
      </tr>
      
      
    <% } else { %>
      <% contacts.forEach(contact => { %>
        <tr>
          <th scope="row">1</th>
          <td><%= contact.nama%></td>
          <td><%= contact.nohp%></td>
          <td><a class="badge rounded-pill text-bg-success" href="/contact/<%= contact.nama %>"><i class="bi bi-info-circle"></i>Detail</a></td>
        </tr>
        <% }) %>
          <% } %>
        </tbody>
        </table>
    </div>
    <script src="dom-contact.js">
      </script>  
   
