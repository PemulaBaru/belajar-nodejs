<div class="container-fluid">
  <h2 class="mt-3 mb-2">Halaman Kontak</h2>
<div class="col-6 d-flex justify-content-end">
    <a href="/contact/add-contact" class="btn btn-primary my-2">Tambah Kontak</a>
         <input type="text"  id="inputKontak">
         <div id="searchKontak" class="btn btn-primary"><i class="bi bi-search"></i></div>
         <a href="" class="btn btn-primary"></a>
  </div>
</div>
  <table class="table">
    <thead>
     <tr>
       <th scope="col">No.</th>
       <th scope="col">Nama</th>
       <th scope="col">NO.HP</th>
       <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
    <% if (contacts.length < 1) { %>
      <tr>
        <td colspan="4">
          <div class="alert mt-4 fw-bold alert-danger" role="alert">
           Contact belum tersedia, <a href="/contact/add-contact">tambah kontak di sini.</a>
          </div>
        
        </td>
      </tr>
      
      
    <% } else { %>
      <% contacts.forEach(contact => { %>
        <tr>
          <th scope="row">1</th>
          <td><%= contact.nama%></td>
          <td><%= contact.nohp%></td>
          <td><a class="badge rounded-pill text-bg-success" href="/contact/<%= contact.nama %>"><i class="bi bi-info-circle"></i>Detail</a></td>
        </tr>
          <% }) %>
          <% } %>
        </tbody>
        </table>
    </div>
